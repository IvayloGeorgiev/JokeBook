.container
    .well
        form.form-horizontal(name="profileForm")
            fieldset
                legend Change Settings
                .form-group
                    label.col-md-2.control-label(for="first-name") First Name
                    .col-md-10
                        input.form-control(type="text", placeholder="First Name", ng-model="user.firstName", required)
                .form-group
                    label.col-md-2.control-label(for="last-name") Last Name
                    .col-md-10
                        input.form-control(type="text", placeholder="Last Name", ng-model="user.lastName", required)
                .pull-right
                    button.btn.btn-primary(ng-click="update(user)", ng-disabled="profileForm.$invalid") Update
                    a.btn.btn-primary(href="#/") Cancel
        br

        form.form-horizontal(name="avatarForm")
            fieldset
                legend Upload Avatar
                    .form-group
                        .col-md-6
                            input(type="text" class="form-control validity" id="image" placeholder="Avatar URL" required  ng-model="user.avatar")
                            button.btn.btn-primary(ng-click="upload(user)", ng-disabled="avatarForm.$invalid") Save
                        .col-md-6.image-container
                            img(width="250" heigth="250" ng-src="{{user.avatar}}" src="")
        fieldset
            legend Your Jokes
            table.table.table-striped
                thead
                    tr
                        td Joke Title
                        td Likes
                        td Date Posted
                tbody
                    tr(ng-repeat="joke in yourJokes" ng-show="joke.user._id === identity.currentUser._id")
                        td {{ joke.title }}
                        td {{ joke.likes }}
                        td {{ joke.date | date:'medium'}}
                        td
                            a.btn.btn-primary.btn-xs(href="#/joke/{{joke._id}}") View



